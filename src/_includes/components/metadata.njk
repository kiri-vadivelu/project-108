<title>{{ title }}</title>
<meta name="description" content="{{ description or metadata.description }}" />
<meta name="keywords" content="{{ metadata.keywords }}" />
<meta name="geo.placename" content="{{ metadata.city }}" />
<meta name="geo.region" content="{{ metadata.country }}" />
<meta name="author" content="{{ metadata.author.name }}" />
<meta name="publish_date" content="{{ page.date | readableDate }}" />

<meta property="og:type" content="{{ metadata.type }}" />
<meta property="og:locale" content="{{ metadata.local }}" />
<meta property="og:site_name" content="{{ metadata.site }}" />
<meta property="og:url" content="{{ metadata.url + page.url }}" />
<meta property="og:publish_date" content="{{ page.date | readableDate }}" />

<meta property="og:title" content="{{ title }}" />
<meta
  property="og:description"
  content="{{ description or metadata.description }}"
/>

<meta property="og:image" content="" />
<meta property="og:image:secure_url" content="" />

<meta name="twitter:card" content="summary" />
<meta name="twitter:creator" content="{{ metadata.author.twitter }}" />
<meta name="twitter:url" content="{{ metadata.url + page.url }}" />
<meta name="twitter:title" content="{{ title }}" />
<meta
  name="twitter:description"
  content="{{ description or metadata.description}}"
/>
<meta name="twitter:image" content="" />
