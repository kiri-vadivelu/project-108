<meta name="author" content="{{ meta.author.name }}" />
<meta name="keywords" content="{{ meta.keywords }}" />
<meta name="geo.placename" content="{{ meta.city }}" />
<meta name="geo.region" content="{{ meta.country }}" />

<meta property="og:type" content="{{ meta.type }}" />
<meta property="og:locale" content="{{ meta.local }}" />
<meta property="og:site_name" content="{{ meta.name }}" />
<meta property="og:url" content="{{ meta.url + page.url }}" />
<meta property="og:image" content="" />
<meta property="og:image:secure_url" content="" />
<meta property="og:title" content="{{ title or meta.title }}" />
<meta
  property="og:description"
  content="{{ description or meta.description }}"
/>
<meta name="twitter:card" content="summary" />
<meta name="twitter:creator" content="{{ meta.author.twitter }}" />
<meta name="twitter:url" content="{{ meta.url + page.url }}" />
<meta name="twitter:title" content="{{ title or meta.title }}" />
<meta
  name="twitter:description"
  content="{{ description or meta.description}}"
/>
<meta
  name="twitter:image"
  content="https://kiri-vadivelu.ca/kiri-vadivelu.jpg"
/>
