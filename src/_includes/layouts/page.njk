      rel="alternate"
      href="{{ metadata.jsonfeed.path | url }}"
      type="application/json"
      title="{{ metadata.title }}"
    />

    <!-- HTML (view) -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="robots"
      content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1"
    />
    <meta name="generator" content="{{ eleventy.generator }}" />

    <!-- favicons (favicon.ico) -->
    <link rel="icon" sizes="48x48" href="{{ '/favicon.ico' | url }}" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="{{ '/apple-touch.png' | url }}"
    />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#fff700" />
    <link rel="canonical" href="{{ metadata.url + page.url }}" itemprop="url" />
    <link rel="license" href="/lincence.txt" />

    <!-- 11ty (11ty.dev) -->
    {% include "../components/metadata.njk" %}
    <script type="module" src="/assets/svg-icon-sprite.js"></script>
    <link rel="stylesheet" href="{{ '/css/style.css' | url }}" />

