---
layout: page
type: post
---

<article class="article">
  <h1>{{ title }}</h1>
  <i>{{ description }}</i>
  <br /><br />
  <small> {{ content | emojiReadTime }} | By {{ author }} </small><br />
  {{ content | safe }}
</article>
<br />

{% set previousPost = collections.news | getPreviousCollectionItem(page) %} {%
set nextPost = collections.news | getNextCollectionItem(page) %}

<span>
  {% if previousPost %}
  <h5>Previous:</h5>
  <a href="{{ previousPost.url }}"
    ><i>{{ previousPost.data.title }}</i></a
  >
  {% endif %}
  <br /><br />
  {% if nextPost %}
  <h5>Next:</h5>
  <a href="{{ nextPost.url }}"
    ><i>{{ nextPost.data.title }}</i></a
  >
  {% endif %}
</span>
